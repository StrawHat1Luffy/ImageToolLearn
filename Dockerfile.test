FROM node:18.17.1-alpine

COPY package.json /app/package.json

WORKDIR /app

RUN apk --update add  --virtual native-dep \
  make gcc g++ python3 libgcc libstdc++ git && \
  corepack yarn install && \
  apk del native-dep
RUN apk add bash

COPY . /app
RUN npm install -g nodemon
CMD ["npm","test"]
